{% extends "base.twig" %}

{% block content %}

  <div class="l-constrain l-constrain--narrow">

    {% include "partials/page-title.twig" with {
      title: post.title
    }%}

    {% include "partials/page-subtitle.twig" with {
      subtitle: post.graphic_description
    }%}

    <div class="gallery">
      <div class="gallery__row">
        {% for image in post.get_field('graphic_gallery') %}
          <div class="flex-column">
            <div class="gallery__item" style="background-image: url({{ image.url|resize(450, 450) }})"></div>
          </div>
        {% endfor %}
      </div>
    </div>
    
  </div>

  

{% endblock %}
